<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <PreferenceCategory app:title="App Lock">

        <SwitchPreferenceCompat
            android:summary="Secure your diary with PIN"
            app:key="app_lock"
            app:title="Enable PIN" />

        <Preference
            app:key="app_pin"
            app:summary="4-digit pin number"
            app:title="Set Up Your Pin" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Start Day">


        <ListPreference
            app:entries="@array/day_title"
            app:entryValues="@array/day_title_values"
            app:key="reply"
            app:title="Choose Start Day"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
</PreferenceScreen>