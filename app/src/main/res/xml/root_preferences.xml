<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <PreferenceCategory app:title="App Lock">

        <SwitchPreferenceCompat
            android:summary="Secure your diary with PIN"
            app:key="app_lock"
            app:title="Enable PIN" />

        <Preference
            app:key="app_pin"
            app:summary="4-digit pin number"
            app:title="Set Up Your Pin" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Backup/Restore" >
        <Preference
            app:key="backup"
            app:title="Backup your diary"/>
        <Preference
            app:key="restore"
            app:title="Restore your diary"/>
    </PreferenceCategory>
</PreferenceScreen>